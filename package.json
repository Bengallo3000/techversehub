{
  "name": "techversehub",
  "version": "1.0.0",
  "description": "React + Node crypto shop",
  "scripts": {
    "bootstrap": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "vercel-build": "npm run bootstrap && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vercel": "^32.5.0"
  }
}
